generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  author
  reader
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
}

model User {
  id           String    @id @default(uuid())
  name         String
  email        String    @unique
  passwordHash String
  role         Role
  createdAt    DateTime  @default(now())
  articles     Article[]
  readLogs     ReadLog[]
}

model Article {
  id        String         @id @default(uuid())
  title     String
  content   String
  category  String
  status    ArticleStatus  @default(DRAFT)
  authorId  String
  author    User           @relation(fields: [authorId], references: [id])
  createdAt DateTime       @default(now())
  deletedAt DateTime?
  readLogs  ReadLog[]
  analytics DailyAnalytics[]
}

model ReadLog {
  id        String   @id @default(uuid())
  articleId String
  readerId  String?
  readAt    DateTime @default(now())
  article   Article  @relation(fields: [articleId], references: [id])
  reader    User?    @relation(fields: [readerId], references: [id])
}

model DailyAnalytics {
  id        String   @id @default(uuid())
  articleId String
  viewCount Int
  date      DateTime
  article   Article  @relation(fields: [articleId], references: [id])

  @@unique([articleId, date])
}
